        <a href="/AdminLinkler/Index/"><i class="glyphicon glyphicon-bookmark"></i> &nbsp; Linkler</a>

        <a href="/AdminKurumsal/Index/"><i class="glyphicon glyphicon-asterisk"></i> &nbsp; Banka Bilgisi</a>       

        <a href="/AdminMesaj/Index/"><i class="glyphicon glyphicon-bell"></i> &nbsp; Gelen Mesaj</a>
   
        @*<a href="#"><i class="glyphicon glyphicon-cog"></i> &nbsp; Ayarlar</a>*@

        <a href="/Login/Login"><i class="glyphicon glyphicon-remove-sign"></i> &nbsp; Çıkış</a>

    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>
